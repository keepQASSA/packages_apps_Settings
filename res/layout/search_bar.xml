<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_scrollFlags="scroll|enterAlways"
    app:cardBackgroundColor="@android:color/transparent"
    style="@style/xd_dashboard_search">

    <Toolbar
        android:id="@+id/search_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xd_dashboard_search_height"
        android:background="@drawable/xd_pref_card_sin"
        android:contentInsetStartWithNavigation="@dimen/search_bar_content_inset"
        android:navigationIcon="@drawable/ic_homepage_search">
    </Toolbar>
    
    <ImageView
        android:id="@+id/account_avatar"
        android:layout_width="@dimen/search_bar_avatar_width"
        android:layout_height="@dimen/search_bar_height"
        android:layout_gravity="end"
        android:tint="?android:attr/textColorPrimary"
        android:contentDescription="@string/search_bar_account_avatar_content_description"
        style="@style/xd_dashboard_avatar"/>

</androidx.cardview.widget.CardView>
