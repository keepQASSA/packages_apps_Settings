<?xml version="1.0" encoding="utf-8"?>
<resources>
 <style name="ToolbarText.Expanded" parent="ToolbarText.Collapsed">
 <item name="android:textSize">34sp</item>
</style>
<style name="ToolbarText.Collapsed" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title"/>
    <style name="xd_pref_card_top">
        <item name="android:layout_marginBottom">-1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/xd_pref_card_top</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="xd_pref_card_mid">
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:layout_marginBottom">-1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/xd_pref_card_mid</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="xd_pref_card_bot">
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/xd_pref_card_bot</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="xd_firmware_header">
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/xd_pref_card_sin</item>
        <item name="android:clipToPadding">false</item>
    </style>
</resources>
